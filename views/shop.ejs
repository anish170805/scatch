<%- include('./partials/header') %>
<% if(success.length>0){ %>
    <div
      class="absolute top-5 left-1/2 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-blue-500"
    >
      <span class="inline-block mt-1 mb-1 text-white"> <%= success %> </span>
    </div>
<% } %>
<div class="w-full flex items-start px-20 py-20">
    <div class="w-[25%] flex flex-col items-start">
        <!-- Your sidebar content remains the same -->
        <div class="flex items-center gap-2">
            <h3>sort by</h3>
            <form action="/shop">
                <select class="border-[1px] px-2 py-1" name="sortby" id="">
                    <option value="popular">Popular</option>
                    <option value="newest">Newest</option>
                </select>
            </form>
        </div>
        <div class="flex flex-col mt-20">
            <a class="block w-fit mb-2" href="">New Collection</a>
            <a class="block w-fit mb-2" href="">All Products</a>
            <a class="block w-fit mb-2" href="">Discounted Products</a>
        </div>
        <div class="mt-32">
            <a class="block w-fit mb-2" href="">Filter by :</a>
            <a class="block w-fit mb-2" href="">Availability</a>
            <a class="block w-fit mb-2" href="">Discount</a>
        </div>
    </div>
    <div class="w-[75%]">
        <!-- Products grid container -->
        <div class="grid grid-cols-3 gap-5">
            <% products.forEach(function(product){ %>
                <div class="flex flex-col">
                    <div class="w-full h-52 bg-gray-100 overflow-hidden">
                        <img class="w-full h-full object-cover" src="data:image/jpeg;base64, <%= product.image.toString('base64') %>" alt="<%= product.name %>">
                    </div>
                    <div class="bg-[<%= product.panelcolor %>] text-[<%= product.textcolor %>] flex justify-between items-center px-4 py-4">
                        <div>
                            <h3 class="font-medium"><%= product.name %></h3>
                            <h4>â‚¹<%= product.price %></h4>
                        </div>
                        <div>
<a class="add-to-cart-btn w-7 h-7 flex items-center justify-center rounded-full bg-white" href="/addtocart/<%= product._id %>">
    <i class="ri-add-line"></i>
</a>
                        </div>
                    </div>
                </div>
            <% }) %>
</div>
<%- include('./partials/footer') %>